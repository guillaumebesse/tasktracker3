<h1>New activity</h1>

<% form_for(@activity) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :day %><br />
    <%= f.date_select :day %>
  </p>
  <p>
    <%= f.label :project %><br />
    <%= collection_select(:activity, :project_id, Project.all, :id, :title, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :resource %><br />
    <%= collection_select(:activity, :resource_id, Resource.all, :id, :name, {:prompt => true}) %>

  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', activities_path %>